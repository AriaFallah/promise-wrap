{
  "name": "pwrap",
  "version": "1.0.2",
  "description": "Give any function promise capability",
  "keywords": [
    "promise",
    "wrap",
    "pwrap",
    "async"
  ],
  "main": "index.js",
  "scripts": {
    "test": "mocha",
