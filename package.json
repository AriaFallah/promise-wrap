  "license": "MIT",
  "bugs": {
    "url": "https://github.com/AriaFallah/promise-wrap/issues"
  },
  "homepage": "https://github.com/AriaFallah/promise-wrap#readme",
  "devDependencies": {
    "chai": "^3.4.1",
    "chai-as-promised": "^5.2.0",
    "coveralls": "^2.11.6",
    "eslint": "^1.10.3",
    "istanbul": "^0.4.1",
    "mocha": "^2.3.4",
    "mocha-lcov-reporter": "^1.0.0"
  },
  "dependencies": {
    "bluebird": "^3.1.1"
  }
